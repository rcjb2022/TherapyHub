# Russell Mental Health - Environment Variables
# Copy this file to .env.local and fill in your values

# ============================================================================
# DATABASE
# ============================================================================
# Google Cloud SQL connection string
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE?schema=public
DATABASE_URL="postgresql://postgres:password@localhost:5432/russell_mental_health"

# ============================================================================
# NEXTAUTH.JS
# ============================================================================
# Generate with: openssl rand -base64 32
NEXTAUTH_SECRET="your-secret-here-generate-with-openssl"
NEXTAUTH_URL="http://localhost:3000"

# ============================================================================
# GOOGLE CLOUD
# ============================================================================
# Google Cloud project ID
GCP_PROJECT_ID="russell-mental-health-prod"

# Google Cloud Storage bucket for documents
GCS_BUCKET_NAME="rmh-documents-prod"

# Google service account JSON (for server-side API calls)
# Create service account in GCP Console with Cloud SQL, Storage, Gmail, Calendar permissions
GOOGLE_SERVICE_ACCOUNT_EMAIL="therapyhub@your-project.iam.gserviceaccount.com"
GOOGLE_SERVICE_ACCOUNT_KEY="path/to/service-account-key.json"

# ============================================================================
# GOOGLE WORKSPACE APIs
# ============================================================================
# Gmail API (for DrBethany@RussellMentalHealth.com)
GMAIL_USER="DrBethany@RussellMentalHealth.com"

# Google Calendar API
GOOGLE_CALENDAR_ID="primary"

# OAuth2 credentials (create in Google Cloud Console)
GOOGLE_CLIENT_ID="your-google-oauth-client-id"
GOOGLE_CLIENT_SECRET="your-google-oauth-client-secret"

# ============================================================================
# STRIPE
# ============================================================================
# Get from https://dashboard.stripe.com/apikeys
STRIPE_PUBLISHABLE_KEY="pk_test_..."
STRIPE_SECRET_KEY="sk_test_..."
STRIPE_WEBHOOK_SECRET="whsec_..."

# ============================================================================
# OFFICE ALLY
# ============================================================================
# Get from Office Ally after account setup
OFFICE_ALLY_API_KEY="your-office-ally-api-key"
OFFICE_ALLY_USER_ID="your-office-ally-user-id"
OFFICE_ALLY_API_URL="https://api.officeally.com"

# ============================================================================
# PRACTICE INFORMATION
# ============================================================================
# Dr. Russell's information
PRACTICE_NPI="1336918325"
PRACTICE_EIN="93-4820690"
PRACTICE_LEGAL_NAME="Bethany R. Russell, Ph.D., P.A."
PRACTICE_NAME="Russell Mental Health"
PRACTICE_PHONE="239-427-1635"
PRACTICE_ADDRESS_STREET="Babcock Ranch"
PRACTICE_ADDRESS_CITY="Babcock Ranch"
PRACTICE_ADDRESS_STATE="FL"
