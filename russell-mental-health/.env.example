# ============================================================================
# WEBRTC / VIDEO
# ============================================================================
# STUN/TURN servers for WebRTC (optional, can use Google's free STUN)
TURN_SERVER_URL="turn:your-turn-server.com:3478"
TURN_SERVER_USERNAME="username"
TURN_SERVER_CREDENTIAL="password"

# Or use Twilio's TURN service
TWILIO_ACCOUNT_SID="your-twilio-account-sid"
TWILIO_AUTH_TOKEN="your-twilio-auth-token"

# ============================================================================
# SECURITY
# ============================================================================
# Session timeout (minutes)
SESSION_TIMEOUT_MINUTES="15"

# Enable audit logging for PHI access
ENABLE_AUDIT_LOGGING="true"

# ============================================================================
# DEVELOPMENT
# ============================================================================
NODE_ENV="development"
LOG_LEVEL="debug"

# ============================================================================
# OPTIONAL (V2 Features)
# ============================================================================
# Coinbase Commerce for cryptocurrency payments
COINBASE_COMMERCE_API_KEY="your-coinbase-commerce-api-key"
COINBASE_COMMERCE_WEBHOOK_SECRET="your-webhook-secret"
